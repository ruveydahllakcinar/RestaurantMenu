@model RestaurantMenu.Models.Classes.Blog

@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Add Blog</h2>

<br />
@using(Html.BeginForm("AddBlog", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" })) { 
<form class="form-group" method="post">

    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x=>x.BlogImg) 
    <input type="file" name="BlogImg" />
    <br />
    @Html.LabelFor(x => x.Explation)
    @Html.TextBoxFor(x => x.Explation, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning">SAVE</button>

</form>
}


